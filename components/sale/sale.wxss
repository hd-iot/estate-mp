/* components/sale/sale.wxss */

.sale-box {
  padding: 50rpx 0 60rpx;
  border-bottom: 1rpx solid #e6e6e6;
}

.hd {
  margin-bottom: 16rpx;
  padding: 0 41rpx;
}

.hd .h2 {
  font-weight: bold;
  font-size: 44rpx;
  line-height: 62rpx;
  color: #424242;
  display: block;
}

.hd .sub-title {
  color: #c7c7c7;
  font-size: 32rpx;
  line-height: 45rpx;
}

.bd {
  padding: 0 41rpx;
  font-size: 0;
  position: relative;
}

.tabs-nav-wrap {
  margin-bottom: 17rpx;
  overflow-x: auto;
  overflow-y: hidden;
  border-bottom: 1rpx solid #e6e6e6;
}

.tabs-nav {
  color: #c1c1c1;
  font-size: 36rpx;
  line-height: 50rpx;
  display: flex;
}

.tabs-nav .li {
  text-align: center;
  position: relative;
  width: 147rpx;
  padding-bottom: 20rpx;
  margin-right: 63rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.tabs-nav .li.active {
  color: #4a4a4a;
}

.tabs-nav .li.active::after {
  content: " ";
  display: block;
  width: 100%;
  position: absolute;
  height: 2rpx;
  background-color: #409eff;
  bottom: 0;
  z-index: 111;
}

.tab-content .view {
  width: 100%;
  height: 582rpx;
  overflow: hidden;
  display: block;
  border-radius: 3px;
}

.thead, .tbody .tr {
  display: flex;
  flex-flow: row;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.thead .th, .tbody .td {
  font-size: 26rpx;
  line-height: 37rpx;
  text-align: center;
  padding: 20rpx 0;
  position: relative;
  white-space: nowrap;
}

.thead .th:first-child, .tbody .td:first-child {
  text-align: left;
}

.thead .th:last-child, .tbody .td:last-child {
  text-align: right;
}

.thead, .tr {
  border-bottom: 1px solid #e6e6e6;
}
