/* components/service/service.wxss */
@import "/app.wxss";

.tabs-nav-wrap {
  margin-bottom: 17rpx;
  overflow-x: auto;
  overflow-y: hidden;
  border-bottom: 1rpx solid #e6e6e6;
}

.tabs-nav {
  color: #c1c1c1;
  font-size: 36rpx;
  line-height: 50rpx;
  display: flex;
}

.tabs-nav .li {
  text-align: center;
  position: relative;
  width: 147rpx;
  padding-bottom: 20rpx;
  margin-right: 63rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.tabs-nav .li.active {
  color: #4a4a4a;
}

.tabs-nav .li.active::after {
  content: " ";
  display: block;
  width: 100%;
  position: absolute;
  height: 2rpx;
  background-color: #409eff;
  bottom: 0;
  z-index: 111;
}

.tab-content {
  margin-top: 43rpx;
}

.tab-content .view {
  width: 100%;
  border-radius: 3px;
}

.tab-content .in-sec {
  display: flex;
  justify-content: space-between;
}

.tab-content .in-sec .inline-input {
  width: 308rpx;
  height: 109rpx;
  font-size: 34rpx;
  line-height: 48prx;
  color: #424242;
}

.tab-content .section .suggestion {
  box-sizing: border-box;
  width: 100%;
  margin-bottom: 20rpx;
  background: #f5f5f5;
  padding: 15rpx 23rpx;
  border-radius: 4px;
  border: none;
  font-size: 34rpx;
  line-height: 48rpx;
  color: #424242;
}

.tab-content .section .contacts {
  width: 100%;
  height: 109rpx;
  font-size: 34rpx;
  line-height: 48prx;
  color: #424242;
}

.tab-content .section .submit {
  margin-top: 109rpx;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  background: #fff;
  width: 100%;
  display: block;
  border-radius: 4px;
  font-size: 36rpx;
  color: #424242;
  position: relative;
  border: 1rpx solid #c7c7c7;
}
.tab-content .section .input{
  border-bottom: 1rpx solid #e6e6e6;
}
