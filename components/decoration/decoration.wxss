/* components/decoration/decoration.wxss */
.decoration-box {
  padding: 50rpx 0 60rpx;
  border-bottom: 1rpx solid #e6e6e6;
}

.hd {
  margin-bottom: 26rpx;
  padding: 0 41rpx;
}

.hd .h2 {
  font-weight: bold;
  font-size: 44rpx;
  line-height: 62rpx;
  color: #424242;
  display: block;
}

.hd .sub-title {
  color: #c7c7c7;
  font-size: 32rpx;
  line-height: 45rpx;
}

.decoration-swiper {
  height: 836rpx;
}

.decoration-swiper image {
  width: 668rpx;
  height: 527.5rpx;
  border-top-left-radius: 6rpx;
  border-top-right-radius: 6rpx;
}

.decoration-swiper .info {
  font-size: 26rpx;
  color: #909090;
  padding: 38rpx 34rpx 40rpx 35rpx;
}

.decoration-swiper .info .h3 {
  margin-bottom: 11rpx;
  font-size: 36rpx;
  line-height: 50rpx;
  max-height: 100rpx;
  overflow: hidden;
  color: #424242;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.decoration-swiper .info .abstract {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  line-height: 38rpx;
}

.decoration-swiper .decoration-item {
  width: 668rpx;
  box-shadow: 0 8rpx 17rpx 0 rgba(0, 0, 0, 0.06);
}