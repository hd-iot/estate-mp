/* pages/book/book.wxss */

.book-detail-wrap {
  padding: 33rpx 41rpx;
}

.book-detail-wrap .book-box {
  margin-bottom: 250rpx;
}

.book-detail-wrap .book-box .section {
  padding: 27rpx 0;
  position: relative;
  border-bottom: 1rpx solid #e6e6e6;
}

.book-detail-wrap .book-box .section .code-btn {
  width: 240rpx;
  border: 1rpx solid #c7c7c7;
  border-radius: 4px;
  background-color: #fff;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #606060;
  text-align: center;
  right: 0;
  top: 14rpx;
  position: absolute;
  padding: 0;
}
.book-detail-wrap .book-box .section .code-btn[disabled]{
  color: #c7c7c7;
}

.book-detail-wrap .submit {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  color: #fff;
  border: 1rpx solid #4a90e2;
  background-color: #4a90e2;
  border-radius: 4px;
  font-size: 32rpx;
}

.book-detail-wrap .submit[disabled] {
  border-color: #4a90e2;
  background: #4a90e2;
  color: hsla(0, 0%, 100%, 0.3);
}
