/* pages/search/search.wxss */

.search-form .search-box {
  height: 289rpx;
  padding: 91rpx 42rpx 0 42rpx;
  overflow: hidden;
}

#search {
  width: 480rpx;
  box-sizing: border-box;
  font-size: 44rpx;
  line-height: 62rpx;
  color: #424242;
  vertical-align: middle;
}

.history-box .search-his {
  padding: 92rpx 41rpx 50rpx;
}

.history-box .search-his text {
  margin-right: 63rpx;
  margin-bottom: 44rpx;
  font-size: 32rpx;
  line-height: 45rpx;
}

.history-box .title, .result-box .title {
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #909090;
  background-color: #f5f5f5;
  padding: 0 40rpx;
  width: 100%;
}

.result-box .results {
  padding: 0 41rpx;
}

.result-box .results .result-item {
  padding: 65rpx 0 60rpx;
  display: flex;
  align-items: flex-start;
}

.result-item + .result-item {
  border-top: solid 1px #e6e6e6;
}

.result-box .results .result-item .thumbnail {
  flex-basis: 285rpx;
  width: 285rpx;
  height: 150rpx;
  display: block;
  overflow: hidden;
  margin-right: 24rpx;
  border-radius: 3px;
}

.result-box .results .result-item .thumbnail image {
  width: 285rpx;
  height: 150rpx;
  display: block;
}

.result-box .results .result-item .info {
  width: 365rpx;
  flex-basis: 365rpx;
}

.result-box .results .result-item .info .name {
  font-size: 36rpx;
  width: 365rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.2;
  color: #424242;
  display: block;
}

.result-box .results .result-item .info .addr {
  margin-top: 8rpx;
  max-height: 58rpx;
  overflow: hidden;
  font-size: 24rpx;
  line-height: 1;
  color: #909090;
}

.result-box .results .result-item .info .tips-box {
  margin-top: 10rpx;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.result-box .results .result-item .info .tips-box .tip {
  padding: 4rpx 15rpx;
  margin-bottom: 6rpx;
  font-size: 20rpx;
  line-height: 28rpx;
  background-color: #c5b582;
  color: #fff;
  max-width: 116rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  border-radius: 3px;
  margin-right: 6rpx;
}
