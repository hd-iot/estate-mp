/* pages/city/city.wxss */

.local-city {
  padding-top: 30rpx;
}

.local-city .h2{
  background-color: #fff;
  font-size: 44rpx;
  color: #c7c7c7;
  height: 62rpx;
  line-height: 62rpx;
  padding: 0;
  padding-left: 38rpx;
  width: 100%;
}

.local-city .loc {
  font-size: 44rpx;
  color: #424242;
  padding-top: 0;
  margin-top: 25rpx;
  margin-bottom: 57rpx;
  padding-bottom: 0;
  padding-left: 96rpx;
  position: relative;
  font-weight: bold;
}

.local-city .loc .icon {
  display: inline-block;
  position: absolute;
  width: 46rpx;
  height: 46rpx;
  background-image: url(data:image/png;base64,);
  background-size: 46rpx;
  background-repeat: no-repeat;
  left: 38rpx;
  top: 6rpx;
}

#cc-list .city-box .h2,.gps .h2  {
  height: 60rpx;
  background-color: #f5f5f5;
  padding: 12rpx 0 11rpx 38rpx;
  font-size: 26rpx;
  color: #909090;
  box-sizing: border-box;
  width: 100%;
  display: block;
}

#cc-list .city-box .citys {
  padding: 0 50rpx 0 38rpx;
}

#cc-list .city-box .citys .city,.gps .city {
  padding: 20rpx 0 20rpx;
  position: relative;
  display: block;
  width: 100%;
}
#cc-list .city-box .citys .city + .city{
border-top: 1px solid #e6e6e6;
}
.gps .city {
  padding-left: 38rpx;
}
